/* ========== CSS 变量定义 ========== */
page {
  --primary: #D4A574;
  --primary-dark: #B8935F;
  --secondary: #8B7355;
  --background: #F5E6D3;
  --surface: #FFFFFF;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-muted: #999999;
  --border: #E5E5E5;
  --success: #52c41a;
  --warning: #faad14;
  --error: #ff4d4f;

  background-color: var(--background);
  font-size: 28rpx;
  color: var(--text-primary);
  box-sizing: border-box;
}

/* ========== 基础容器 ========== */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* ========== 卡片 ========== */
.card {
  background-color: var(--surface);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

/* ========== 按钮 ========== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  box-sizing: border-box;
}

.btn-primary {
  background-color: var(--primary);
  color: #FFFFFF;
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: transparent;
  color: var(--primary);
  border: 2rpx solid var(--primary);
}

.btn-secondary:active {
  background-color: rgba(212, 165, 116, 0.1);
}

/* ========== 文字省略 ========== */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ========== Flex 布局 ========== */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

