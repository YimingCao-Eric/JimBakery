/* ========== 加载与空状态 ========== */
.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-muted);
  font-size: 26rpx;
}

.loading-icon,
.empty-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

/* ========== 安全区域 ========== */
